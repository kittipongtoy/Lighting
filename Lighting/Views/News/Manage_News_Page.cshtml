@{
    ViewData["Title"] = "Manage_News_Page";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
@model IEnumerable<Lighting.Models.InputFilterModels.News.Output_NewsVm>

<div class="container " style="width:100%">
    <div class=" d-flex justify-content-between mb-3">
        <div>
            @*
            <a href="/news/index" class="btn btn-primary rounded-2">
            ข่าวทั้งหมด/ All News
            </a>
            *@
        </div>
        <a href="@Url.Action("Add_News_Page","news")" class="btn btn-primary ">
            เพิ่มข่าว / Add News
        </a>
    </div>
    <hr/>
    <div class="row d-flex justify-content-center gap-5 d-flex-wraps mt-2" id="card_container">
        @foreach (var news in Model)
        {
            string getDate = "";
            var date=news.CreateDate_EN;
            if(date!=null){
             getDate= date.Value.Day + "/" + date.Value.Month + "/" + date.Value.Year;
            }

            <div class="card col-12 col-sm-5 col-md-4 col-lg-3 border border-dark rounded-3" id="@news.Id">
                <img src="@news.TitleImage" class="card-img-top mt-2 rounded-3" style="width:100%;height:60%;">
                <div class="card-body p-2" style="display:grid;grid-template-rows:auto auto 3rem;box-sizing:border-box;gap:3px;">
                    <h5 class="card-title">@news.Title_TH / @news.Title_EN</h5>
                    <p class="card-text">@getDate</p>

                    <div style="display:grid;grid-template-columns:1fr 1fr;gap:3px;">
                        <a href="/news/Edit_News_Page?id=@news.Id" class="bg-warning" style="display:flex;justify-content:center;text-align:center;flex-direction:column;">แก้ไข/edit</a>
                        <div class="bg-danger" onclick="deleteById(@news.Id,'TH')" style="display:flex;justify-content:center;text-align:center;flex-direction:column;">ลบ/delete</div>
                    </div>

                </div>
            </div>
        }

    </div>
</div> 

@section Scripts{

    <script>

        function deleteById(id, lang) {

            if (lang == "TH") {
                Swal.fire({
                    icon: 'warning',
                    title: "คุณแน่ใจว่าต้องการลบ?",
                    text: "",
                    showConfirmButton: true,
                }).then((confirm) => {
                    if (confirm.isConfirmed) {

                        $.ajax({
                            type: 'GET',
                            url: '/News/Delete_News?id=' + id,
                            processData: false,
                            contentType: false,
                            cache: false,
                            beforeSend: function () {
                                Swal.fire('Please wait')
                                Swal.showLoading()
                            },
                            success: function (data) {
                                if (data.status == "success") {
                                    Swal.fire({
                                        icon: 'success',
                                        title: data.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    }).then(() => {
                                        $('#card_container').parent().find('#' + id).remove();
                                    });
                                }
                                else {
                                    Swal.fire({
                                        icon: 'warning',
                                        text: data.message,
                                    });
                                }
                            }, error: function (e) {
                                Swal.fire({
                                    icon: 'error',
                                    text: e.message,
                                });
                                console.log(e.message);
                                console.log(e.inner);
                            }
                        });
                    } else {

                    }
                });
            }
            if (lang == "EN") {
                Swal.fire({
                    icon: 'warning',
                    title: "Are you sure?",
                    text: "",
                    showConfirmButton: true,
                }).then((confirm) => {
                    if (confirm.isConfirmed) {
                        $.ajax({
                            type: 'GET',
                            url: '/News/Delete_News?id=' + id,
                            processData: false,
                            contentType: false,
                            cache: false,
                            beforeSend: function () {
                                Swal.fire('Please wait')
                                Swal.showLoading()
                            },
                            success: function (data) {
                                if (data.status == "success") {
                                    Swal.fire({
                                        icon: 'success',
                                        title: data.message,
                                        showConfirmButton: false,
                                        timer: 2000
                                    }).then(() => {
                                        $('#card_container').parent().find('#' + id).remove();
                                    });
                                }
                                else {
                                    Swal.fire({
                                        icon: 'warning',
                                        text: data.message,
                                    });
                                }
                            }, error: function (e) {
                                Swal.fire({
                                    icon: 'error',
                                    text: e.message,
                                });
                                console.log(e.message);
                                console.log(e.inner);
                            }
                        });
                    } else {

                    }
                });
            }



        }

    </script>
}