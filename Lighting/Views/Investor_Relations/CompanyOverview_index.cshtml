    </div>
</div>
@section Scripts{
    <script>
        function submit_form_create() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/Investor_Relations/CompanyOverview_index_insert',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            $("#exampleModal_create").modal('toggle');
                            var oTable = $('#kt_customers_table').DataTable();
                            oTable.ajax.reload(null, false);
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function submit_form_edit() {
            var raw_form = document.getElementById('form_edit');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/Investor_Relations/CompanyOverview_index_update',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            $("#exampleModal_edit").modal('toggle');
                            var oTable = $('#kt_customers_table').DataTable();
                            oTable.ajax.reload(null, false);
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function changeStatus(id, checked_obj) {
            console.log("checked_obj=>", checked_obj.value);
            console.log("id=>", id);
            $.ajax({
                type: "POST",
                cache: false,
                url: "/Investor_Relations/CompanyOverview_changeStatus",
                data: {
                    id: id,
                    status: checked_obj.checked
                },    // multiple data sent using ajax
                success: function (data) {
                    if (data.status == "success") {

                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function edit_item(id) {
            $.ajax({
                type: "POST",
                cache: false,
                url: "/Investor_Relations/CompanyOverview_getData",
                data: {
                    id: id,
                },    // multiple data sent using ajax
                success: function (data) {
                    if (data.status == "success") {
                        console.log("data=>", data.data);
                        $("#exampleModal_edit").modal('toggle');
                        $("#edit_id").val(data.data.id);
                        if (data.data.use_status == 1) {
                            $("#use_status_edit").prop("checked", true);
                        } else {
                            $("#use_status_edit").prop("checked", false);
                        }
                        $("#edit_image").removeAttr("src");
                        $("#edit_image").attr("src", "/upload_image/CompanyOverview/" + data.data.image_name);
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });

        }

        function delete_item(id) {
            Swal.fire({
                title: 'คุณต้องการจะลบหรือไม่?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'ใช่',
                denyButtonText: `ไม่ใช่`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        cache: false,
                        url: "/Investor_Relations/CompanyOverview_delete",
                        data: {
                            id: id
                        },    // multiple data sent using ajax
                        success: function (data) {
                            if (data.status == "success") {
                                Swal.fire({
                                    icon: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then((result) => {
                                    var oTable = $('#kt_customers_table').DataTable();
                                    oTable.ajax.reload(null, false);
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    text: data.message,
                                });
                            }
                        }, error: function (e) {
                            Swal.fire({
                                icon: 'error',
                                text: e.message,
                            });
                            console.log(e.message);
                            console.log(e.inner);
                        }
                    });
                } else if (result.isDenied) {

                }
            })
        }
        $(document).ready(function () {
            var table_1 = $("#kt_customers_table").DataTable({
                responsive: true,
                order: [[0, "asc"]],
                "ajax": {
                    "url": "/Investor_Relations/CompanyOverview_index_getTable",
                    "type": "POST",
                    "datatype": "json",

                },
                "columns": [
                    {
                        "name": "count_row", "data": "count_row"
                    },
                    {
                        "name": "image_name", "data": "image_name", "class": "text-center", "render": function (data, type, row) {
                            var text = '<div class="mb-10" style="text-align:center;">' +
                                '<img src="/upload_image/CompanyOverview/' + row.image_name + '" style="height: 250px;width: 250px;" alt="image">' +
                                '</div>';
                            return text;

                        }
                    },
                    {
                        "name": "use_status", "data": "use_status", "render": function (data, type, row) {
                            if (row.use_status == 1) {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" checked type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            } else {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            }


                        }
                    },
                    {
                        "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {
                            var text = '<button type="button" class="btn btn-warning" onclick="edit_item(' + row.id + ')"><i class="bi bi-pencil-square"></i>แก้ไข</button>';
                            text += '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_item(' + row.id + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                            return text;

                        }
                    }
                ],
            });


            $('#search_table_1').keyup(function () {
                table_1.search($(this).val()).draw();
            })
        });

    </script>
}