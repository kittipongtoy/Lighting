@model Lighting.Models.model_input

@{
    ViewData["Title"] = "Board_of_Directors_edit";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">คณะกรรมการบริษัท</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("InvestorRelations_index","Investor_Relations")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">ข้อมูลบริษัท</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">คณะกรรมการบริษัท</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                แก้ไขรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Board_of_Directors_index","Investor_Relations")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <input class="form-control" name="id" hidden value="@Model.fod_Board_of_Directors.id" />
                        <div class="mb-10" style="text-align:center;">
                            <img src="~/upload_image/BoardOfDirectors/@Model.fod_Board_of_Directors.image_nameTH" style="height: 250px;width: 250px;" alt="image">
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อ - นามสกุล TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="name_th" value="@Model.fod_Board_of_Directors.name_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อ - นามสกุล EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="name_en" value="@Model.fod_Board_of_Directors.name_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ตำแหน่ง TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="position_th" value="@Model.fod_Board_of_Directors.position_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ตำแหน่ง EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="position_en" value="@Model.fod_Board_of_Directors.position_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ตำแหน่งในบริษัท TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="position_company_th" value="@Model.fod_Board_of_Directors.position_company_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ตำแหน่งในบริษัท EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="position_company_en" value="@Model.fod_Board_of_Directors.position_company_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สัญชาติ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="nationality_th" value="@Model.fod_Board_of_Directors.nationality_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    สัญชาติ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="nationality_en" value="@Model.fod_Board_of_Directors.nationality_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    การศึกษา TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="study_th" style="height:150px">@Model.fod_Board_of_Directors.study_th</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    การศึกษา EN
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="study_en" style="height:150px">@Model.fod_Board_of_Directors.study_en</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ความเชี่ยวชาญ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="expertise_th" value="@Model.fod_Board_of_Directors.expertise_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ความเชี่ยวชาญ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="expertise_en" value="@Model.fod_Board_of_Directors.expertise_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    วันเข้าดำรงตำแหน่งกรรมการ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="date_appointment_th" value="@Model.fod_Board_of_Directors.date_appointment_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    วันเข้าดำรงตำแหน่งกรรมการ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="date_appointment_en" value="@Model.fod_Board_of_Directors.date_appointment_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    จำนวนการถือหุ้นสามัญของบริษัท TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="shares_held_th" value="@Model.fod_Board_of_Directors.shares_held_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    จำนวนการถือหุ้นสามัญของบริษัท EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="shares_held_en" value="@Model.fod_Board_of_Directors.shares_held_en" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    การผ่านหลักสูตรอบรม TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="training_course_th" style="height:150px">@Model.fod_Board_of_Directors.training_course_th</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    การผ่านหลักสูตรอบรม EN
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="training_course_en" style="height:150px">@Model.fod_Board_of_Directors.training_course_en</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ประวัติการทำงาน TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="work_history_th" style="height:150px">@Model.fod_Board_of_Directors.work_history_th</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    ประวัติการทำงาน EN
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="work_history_en" style="height:150px">@Model.fod_Board_of_Directors.work_history_en</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    การดำรงตำแหน่งในกิจการที่แข่งขัน หรือเกี่ยวเนื่องกับธุรกิจของบริษัท TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="holding_position_th" style="height:150px">@Model.fod_Board_of_Directors.holding_position_th</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    การดำรงตำแหน่งในกิจการที่แข่งขัน หรือเกี่ยวเนื่องกับธุรกิจของบริษัท EN
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="holding_position_en" style="height:150px">@Model.fod_Board_of_Directors.holding_position_en</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ประวัติการทำผิดกฎหมายในระยะ 10 ปีที่ผ่านมา TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="Illegal_history_th" style="height:150px">@Model.fod_Board_of_Directors.Illegal_history_th</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    ประวัติการทำผิดกฎหมายในระยะ 10 ปีที่ผ่านมา EN
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="Illegal_history_en" style="height:150px">@Model.fod_Board_of_Directors.Illegal_history_en</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    รูป TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_imageTH" accept="image/*" />
                            </div>
                            <div class="col-2">
                                <span>
                                    รูป EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_imageEN" accept="image/*" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    @if (@Model.fod_Board_of_Directors.use_status == 1)
                                    {
                                        <input class="form-check-input" checked type="checkbox" name="use_status" value="1" id="use_status">

                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" name="use_status" value="1" id="use_status">

                                    }
                                    <label class="form-check-label" for="use_status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/Investor_Relations/Board_of_Directors_edit_update',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "@Url.Action("Board_of_Directors_index","Investor_Relations")";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

    </script>
}