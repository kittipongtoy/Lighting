@section Scripts{

    <script>

        function add_dataDetails(id) {
            //debugger;
            $.ajax({
                type: "POST",
                url: "/importantFinancialInformation/SH_IR_financial_highlight_DetailsData",
                data: {
                    id: id,
                },
                success: function (data) {
                    location.href = '/importantFinancialInformation/SH_IR_financial_highlight_DetailsData/?Id=' + id;
                    //window.location.href = "Url.Action("SH_IR_financial_highlight_DetailsData","importantFinancialInformation")/" + id;
                }
            });
        }

        function edit_details(id) {
            location.href = '/importantFinancialInformation/SH_IR_financial_highlight_DetailsData_edit/?Id=' + id;
            //window.location.href = "Url.Action("SH_IR_financial_highlight_DetailsData_edit","importantFinancialInformation")/" + id;
        }

        function delete_details(id) {
            Swal.fire({
                title: 'คุณต้องการจะลบหรือไม่?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'ใช่',
                denyButtonText: `ไม่ใช่`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        cache: false,
                        url: "/importantFinancialInformation/SH_IR_financial_highlight_DetailsData_delete",
                        data: {
                            Id: id
                        },    // multiple data sent using ajax
                        success: function (data) {
                            if (data.status == "success") {
                                Swal.fire({
                                    icon: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then((result) => {
                                    var oTable = $('#kt_customers_table_2').DataTable();
                                    oTable.ajax.reload(null, false);
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    text: data.message,
                                });
                            }
                        }, error: function (e) {
                            Swal.fire({
                                icon: 'error',
                                text: e.message,
                            });
                        }
                    });
                } else if (result.isDenied) {

                }
            })
        }

        function changeStatus_itemTable_1(id, checked_obj) {
            $.ajax({
                type: "POST",
                cache: false,
                url: "/importantFinancialInformation/SH_IR_financial_highlight_DetailsData_changeStatus",
                data: {
                    id: id,
                    status: checked_obj.checked
                },    // multiple data sent using ajax
                success: function (data) {
                    if (data.status == "success") {
                        location.href = "/importantFinancialInformation/SH_IR_financial_highlight_Details/?Id=@Model.SH_IR_financial_highlight_Details.id";
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                }
            });
        }
        
        function add_itemTable_1(id) { 
            debugger
            location.href = '/importantFinancialInformation/SH_IR_financial_highlight_DetailsDataItem/?Id=' + id;
            //window.location.href = "Url.Action("SH_IR_financial_highlight_Details","importantFinancialInformation")/" + id;
        }

        //load data details to table
        $(document).ready(function () {
            var data = @Model.SH_IR_financial_highlight_Details.id;

            var table_2 = $("#kt_customers_table_2").DataTable({
                responsive: true,
                order: [[0, "asc"]],
                ajax: {
                    url: "/importantFinancialInformation/SH_IR_financial_highlight_DetailsData_getTable",
                    type: "POST",
                    //"datatype": "json",
                    data: { id: data },

                },
                "columns": [
                    {
                        "name": "count_row", "data": "count_row"
                    },
                    {
                        "name": "profitTitleTH", "data": "profitTitleTH"
                    },
                    {
                        "name": "profitTitleENG", "data": "profitTitleENG"
                    },
                    {
                        "name": "active_status", "data": "active_status", "render": function (data, type, row) {
                            if (row.active_status == 1) {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" checked type="checkbox" name="active_status" value="1" id="active_status" onchange="changeStatus_itemTable_1(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="active_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            } else {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" type="checkbox" name="active_status" value="1" id="active_status" onchange="changeStatus_itemTable_1(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="active_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            }


                        }
                    },
                    {
                        "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {

                            var add = '<button type="button" class="btn btn-success" onclick="add_itemTable_1(' + row.id + ')"><i class="bi bi-icon-plus"></i>เพิ่ม</button>';

                            return add;

                        }
                    },
                    {
                        "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {
                            var text = '<button type="button" class="btn btn-warning" onclick="edit_details(' + row.id + ')"><i class="bi bi-pencil-square"></i>แก้ไข</button>';
                            text += '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_details(' + row.id + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                            return text;

                        }
                    }
                ],
            });


            $('#search_table_2').keyup(function () {
                table_2.search($(this).val()).draw();
            })
        });

    </script>
}