                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        })
                            .then(() => {
                                $("#exampleModal_create").modal('toggle');
                                var oTable = $('#kt_customers_table').DataTable();
                                oTable.ajax.reload(null, false);

                            });

                        window.location.href = "@Url.Action("SH_IR_Report_Meeting","Information_ShareHolder")";

                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
