<script>


    function submit_form() {
        var raw_form = document.getElementById('form_create');
        var formData = new FormData(raw_form);

        $.ajax({
            type: 'POST',
            url: '/Information_ShareHolder/ShareHolder_addData',
            data: formData,
            processData: false,
            contentType: false,
            cache: false,
            beforeSend: function () {
                Swal.fire('Please wait')
                Swal.showLoading()
            },
            success: function (data) {
                if (data.status == "success") {
                    Swal.fire({
                        icon: 'success',
                        title: data.message,
                        showConfirmButton: false,
                        timer: 2000
                    })
                }
                else {
                    Swal.fire({
                        icon: 'warning',
                        text: data.message,
                    });
                }
            }, error: function (e) {
                Swal.fire({
                    icon: 'error',
                    text: e.message,
                });
                console.log(e.message);
                console.log(e.inner);
            }
        });
    }

    function edit_details(id) {
        location.href = '/Information_ShareHolder/ShareHolder_DataDetails_edit/?Id=' + id;

        //window.location.href = "Url.Action("ShareHolder_DataDetails_edit","Information_ShareHolder")/" + id;
    }

    function delete_details(id) {
        Swal.fire({
            title: 'คุณต้องการจะลบหรือไม่?',
            showDenyButton: true,
            showCancelButton: false,
            confirmButtonText: 'ใช่',
            denyButtonText: `ไม่ใช่`,
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    cache: false,
                    url: "/Information_ShareHolder/Corporate_governance_cate_delete",
                    data: {
                        Id: id
                    },    // multiple data sent using ajax
                    success: function (data) {
                        if (data.status == "success") {
                            Swal.fire({
                                icon: 'success',
                                title: data.message,
                                showConfirmButton: false,
                                timer: 2000
                            }).then((result) => {
                                var oTable = $('#kt_customers_table_2').DataTable();
                                oTable.ajax.reload(null, false);
                            });
                        }
                        else {
                            Swal.fire({
                                icon: 'warning',
                                text: data.message,
                            });
                        }
                    }, error: function (e) {
                        Swal.fire({
                            icon: 'error',
                            text: e.message,
                        });
                        console.log(e.message);
                        console.log(e.inner);
                    }
                });
            } else if (result.isDenied) {

            }
        })
    }

    //load data details to table
    $(document).ready(function () {

        var table_2 = $("#kt_customers_table_2").DataTable({
            responsive: true,
            order: [[0, "asc"]],
            "ajax": {
                "url": "/Information_ShareHolder/Major_ShareHolder_getTable",
                "type": "POST",
                "datatype": "json",

            },
            "columns": [
                {
                    "name": "count_row", "data": "count_row"
                },
                {
                    "name": "nameTH", "data": "nameTH"
                },
                {
                    "name": "amount", "data": "amount"
                },
                {
                    "name": "percentPerAmount", "data": "percentPerAmount"
                },
                {
                    "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {
                        var text = '<button type="button" class="btn btn-warning" onclick="edit_details(' + row.id + ')"><i class="bi bi-pencil-square"></i>แก้ไข</button>';
                        text += '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_details(' + row.id + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                        return text;

                    }
                }
            ],
        });


        $('#search_table_2').keyup(function () {
            table_2.search($(this).val()).draw();
        })
    });

</script>
