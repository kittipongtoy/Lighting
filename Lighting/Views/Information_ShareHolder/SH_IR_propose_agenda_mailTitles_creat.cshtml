@section Scripts{

    <script>
        var editorTH;
        var editorEN;
        ClassicEditor
            .create(document.querySelector('#kt_docs_ckeditor_document_TH'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorTH = editor;
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#kt_docs_ckeditor_document_EN'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorEN = editor;
            })
            .catch(error => {
                console.error(error);
            });

        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            var get_th = editorTH.getData();
            var get_en = editorEN.getData();
            formData.append("detailsTH", get_th);
            formData.append("detailsENG", get_en);

            $.ajax({
                type: 'POST',
                url: '/Information_ShareHolder/SH_IR_propose_agenda_mailTitles_create_submit',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "@Url.Action("SH_IR_propose_agenda","Information_ShareHolder")";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

    </script>

