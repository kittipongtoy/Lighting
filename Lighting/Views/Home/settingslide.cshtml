@{
    ViewData["Title"] = "settingslide";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">จัดการสไลด์ Main</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Index","Home")" class="text-muted text-hover-primary">จัดการสไลด์</a>
                    </li>

                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        จัดการสไลด์
                    </div>
                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                เพิ่ม
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-0 row">
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="TB_Slide_Image_Index">
                        <thead>
                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                @*<th class="min-w-125px">เรียงลำดับ</th>*@
                                <th class="min-w-125px">รูปภาพ</th>
                                <th class="min-w-125px">สถานะการใช้งาน</th>
                                <th class="text-end min-w-70px">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="update1" asp-controller="Home" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">เพิ่มรูปภาพสไลด์</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
               
                    <div class="input-group mb-3">
                        <input type="file" class="form-control" id="inputGroupFile02" name="image1" required>
                        <label class="input-group-text" for="inputGroupFile02">Upload</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">เพิ่ม</button>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts{
    <script>
        function upsort(ids,sort)
        {

        }
        function downsort(ids, sort) {

        }
        $(() => {
            var oTable = $("#TB_Slide_Image_Index").DataTable({
                processing: true,
                serverSide: true,
                searching: false,
                responsive: true,
                oLanguage: {
                    "sEmptyTable": "ไม่มีข้อมูล",
                },
                ajax: {
                    type: "POST",
                    url: '/Home/datatable',
                },
                columns: [
                    {
                        "name": "pathImg", "data": "pathImg", "render": function (data, type, row) {
                            return "<img src=\"upload_image/Index/" + data + "\" width=\"25%\"/>";
                        }
                    },
                    {
                        "name": "isActive", "data": "isActive", "className": "text-center", "render": function (data, type, row) {
                            if (row.isActive == true) {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" checked type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id_slideimg_index + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            } else {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id_slideimg_index + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            }
                            //return '<div class="form-check form-switch"><input class="form-check-input" type = "checkbox" role="switch" id="flexSwitchCheckDefault" checked></div>';
                    }
                    },
                    {
                        "name": "id_slideimg_index", "data": "id_slideimg_index", "class": "text-center", "render": function (data, type, row) {
                            var text = '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_item(' + row.id_slideimg_index + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                            return text;
                        }
                    }
                ]
            });
        })

        function changeStatus(id, checked_obj) {
            $.ajax({
                type: "POST",
                cache: false,
                url: "/Home/BannerChange",
                data: {
                    Id: id
                },
                success: function (data) {
                    if (data.status == "success") {

                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function delete_item(id) {
            Swal.fire({
                title: 'คุณต้องการจะลบหรือไม่?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'ใช่',
                denyButtonText: `ไม่ใช่`,
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        type: "delete",
                        cache: false,
                        url: "/Home/BannerDelete",
                        data: {
                            Id: id
                        },
                        success: function (data) {
                            if (data.status == "success") {
                                Swal.fire({
                                    icon: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then((result) => {
                                    var oTable = $('#TB_Slide_Image_Index').DataTable();
                                    oTable.ajax.reload(null, false);
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    text: data.message,
                                });
                            }
                        }, error: function (e) {
                            Swal.fire({
                                icon: 'error',
                                text: e.message,
                            });
                            console.log(e.message);
                            console.log(e.inner);
                        }
                    });
                } else if (result.isDenied) {

                }
            })
        }
    </script>
}