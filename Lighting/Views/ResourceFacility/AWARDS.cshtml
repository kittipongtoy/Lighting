@model Lighting.Models.Resource_FacilityModels

@{
    ViewData["Title"] = "AWARDS";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">AWARDS</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("History","ResourceFacility")" class="text-muted text-hover-primary">Resource Facility</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Profile</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">AWARDS</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="post d-flex flex-column-fluid">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                
                    <div class="card">
                        <!--begin::Card body-->
                        <div class="card-body pt-0">

                            <div class="mb-10">
                            </div>
                            <form id="form_create" enctype="multipart/form-data">
                                @{
                                    if (Model.count_Awards == 0)
                                    {
                                        <div class="row mb-3">
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ TH
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <input type="text" class="form-control" name="Title_TH" autocomplete="off" />
                                            </div>
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ ENG
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <input type="text" class="form-control" name="Title_EN" autocomplete="off" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ รายละเอียด TH
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <textarea type="text" class="form-control" name="SubTitle_TH" autocomplete="off"> </textarea>
                                            </div>
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ รายละเอียดENG
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <textarea type="text" class="form-control" name="SubTitle_EN" autocomplete="off" ></textarea>
                                            </div>
                                        </div>
                                         

                                    }
                                    else
                                    {

                                        <div class="row mb-3">
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ TH
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <input type="text" class="form-control" name="Title_TH" value="@Model.fod_Awards.Title_TH" />
                                            </div>
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ ENG
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <input type="text" class="form-control" name="Title_EN" value="@Model.fod_Awards.Title_EN" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ รายละเอียด TH
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <textarea type="text" class="form-control" name="SubTitle_TH">@Model.fod_Awards.SubTitle_TH</textarea>
                                            </div>
                                            <div class="col-2">
                                                <span>
                                                    หัวข้อ รายละเอียดENG
                                                </span>
                                            </div>
                                            <div class="col-4">
                                            <textarea type="text" class="form-control" name="SubTitle_EN">@Model.fod_Awards.SubTitle_EN</textarea>
                                            </div>
                                        </div>  
                                    }
                                }

                            </form>

                            <div class="row mb-3" style="justify-content: right;">
                                <div class="col-1">
                                    <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                                </div>
                            </div>

                        </div>

                    </div>


                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <span class="svg-icon svg-icon-1 position-absolute ms-6">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="currentColor" />
                                    <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="currentColor" />
                                </svg>
                            </span>
                            <input type="text" data-kt-customer-table-filter="search" id="search_table_1" class="form-control form-control-solid w-250px ps-15" placeholder="ค้นหา" />
                        </div>
                    </div>

                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                            <a type="button" class="btn btn-primary" href="@Url.Action("AWARDS_Add","ResourceFacility")">เพิ่ม</a>
                        </div>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <table class="table align-middle table-row-dashed fs-6 gy-5"  id="award_table">
                        <thead>
                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                <th>#</th>
                                <th class="min-w-125px">รูป</th>
                                <th class="min-w-125px">หัวข้อ TH</th>
                                <th class="min-w-125px">สถานะการใช้งาน</th>
                                <th class="text-end min-w-70px">Actions</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{

    <script>

        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/ResourceFacility/Award_submit',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function edit_details(Id) {
            location.href = '/ResourceFacility/AWARDS_Edit/?Id=' + Id;

            //window.location.href = "Url.Action("ShareHolder_DataDetails_edit","Information_ShareHolder")/" + id;
        }

        function changeStatus(Id, checked_obj) {
            $.ajax({
                type: "POST",
                cache: false,
                url: "/ResourceFacility/AWARDS_Change",
                data: {
                    Id: Id,
                    status: checked_obj.checked
                },    // multiple data sent using ajax
                success: function (data) {
                    if (data.status == "success") {
                        window.location.href = "@Url.Action("AWARDS","ResourceFacility")";
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function delete_details(Id) {
            Swal.fire({
                title: 'คุณต้องการจะลบหรือไม่?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'ใช่',
                denyButtonText: `ไม่ใช่`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        cache: false,
                        url: "/ResourceFacility/AWARDS_Delete",
                        data: {
                            Id: Id
                        },    // multiple data sent using ajax
                        success: function (data) {
                            if (data.status == "success") {
                                Swal.fire({
                                    icon: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then((result) => {
                                    var oTable = $('#award_table').DataTable();
                                    oTable.ajax.reload(null, false);
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    text: data.message,
                                });
                            }
                        }, error: function (e) {
                            Swal.fire({
                                icon: 'error',
                                text: e.message,
                            });
                            console.log(e.message);
                            console.log(e.inner);
                        }
                    });
                } else if (result.isDenied) {

                }
            })
        }

        //load data details to table
        $(document).ready(function () {

            var table_2 = $("#award_table").DataTable({
                responsive: true,
                order: [[0, "asc"]],
                "ajax": {
                    "url": "/ResourceFacility/Award_Details_getTable",
                    "type": "POST",
                    "datatype": "json", 
                },
                "columns": [
                    {
                        "name": "count_row", "data": "count_row"
                    },
                    {
                        "name": "imageTH", "data": "imageTH", "class": "text-center", "render": function (data, type, row) {
                            var text = '<div class="mb-10" style="text-align:center;">' +
                                '<img src="/upload_image/RF_Award/' + row.imageTH + '" style="height: 250px;width: 250px;" alt="image">' +
                                '</div>';
                            return text;

                        }
                    },
                    {
                        "name": "title_TH", "data": "title_TH"
                    },
                    {
                        "name": "status", "data": "status", "render": function (data, type, row) {
                            if (row.status == 1) {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" checked type="checkbox" name="Status" value="1" id="Status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="Status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            } else {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" type="checkbox" name="Status" value="1" id="Status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="Status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            }
                        }
                    },
                    {
                        "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {
                            var text = '<button type="button" class="btn btn-warning" onclick="edit_details(' + row.id + ')"><i class="bi bi-pencil-square"></i>แก้ไข</button>';
                            text += '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_details(' + row.id + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                            return text;

                        }
                    }
                ],
            });


            $('#search_table_2').keyup(function () {
                table_2.search($(this).val()).draw();
            })
        });

    </script>

}

