@model Lighting.Models.Resource_FacilityModels

@{
    ViewData["Title"] = "AWARDS_Edit";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">AWARDS</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("History","ResourceFacility")" class="text-muted text-hover-primary">Resource Facility</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Profile</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">AWARDS</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="post d-flex flex-column-fluid" id="kt_post">
        <!--begin::Container-->
        <div id="kt_content_container" class="container-xxl">
            <!--begin::Card-->
            <div class="card">
                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                แก้ไขรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("AWARDS","ResourceFacility")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <input class="form-control" name="id" hidden value="@Model.AwardsDetail.Id" />

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    รูปภาพ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <img src="~/upload_image/RF_Award/@Model.AwardsDetail.ImageTH" style="height: 250px;width: 250px;" alt="image">
                                </div>
                                <input type="file" class="form-control" name="upload_image" accept="image/*" required />
                            </div>
                            <div class="col-2">
                                <span>
                                    รูปภาพ ENG
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <img src="~/upload_image/RF_Award/@Model.AwardsDetail.ImageEN" style="height: 250px;width: 250px;" alt="image">
                                </div>
                                <input type="file" class="form-control" name="upload_image_ENG" accept="image/*" required />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    หัวข้อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_TH" value="@Model.AwardsDetail.Title_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    หัวข้อ ENG
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_EN" value="@Model.AwardsDetail.Title_EN" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    หัวข้อ รายละเอียด TH
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="SubTitle_TH">@Model.AwardsDetail.SubTitle_TH</textarea>
                            </div>
                            <div class="col-2">
                                <span>
                                    หัวข้อ รายละเอียดENG
                                </span>
                            </div>
                            <div class="col-4">
                                <textarea type="text" class="form-control" name="SubTitle_EN">@Model.AwardsDetail.SubTitle_EN</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    @if (Model.AwardsDetail.Status == 1)
                                    {
                                        <input class="form-check-input" checked type="checkbox" name="Status" value="1" id="Status">
                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" name="Status" value="1" id="Status">
                                    }
                                    <label class="form-check-label" for="Status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->

        </div>
        <!--end::Container-->
    </div>

</div>

@section Scripts{

    <script>

        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/ResourceFacility/AWARDS_Edit_Submit',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "@Url.Action("AWARDS","ResourceFacility")";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

    </script>
}


