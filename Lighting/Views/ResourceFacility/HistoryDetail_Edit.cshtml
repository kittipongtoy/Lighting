@model Lighting.Models.Resource_FacilityModels

@{
    ViewData["Title"] = "HistoryDetail_Edit";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">History</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("History","ResourceFacility")" class="text-muted text-hover-primary">Resource Facility</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Profile</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">History</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="post d-flex flex-column-fluid">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                แก้ไขรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("History","ResourceFacility")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_TH" id="Title_TH" value="@Model.HistoryDetail.Title_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_EN" id="Title_EN" value="@Model.HistoryDetail.Title_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    รูป TH
                                </span>
                                <br />
                                <span style="color:red;">
                                    ขนาดรูปภาพ : 1300 * 650 px
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <div class="mb-10" style="text-align:center;">
                                        <img src="~/upload_image/Resource_Facility/@Model.HistoryDetail.ImageTH" style="height: 250px;width: 250px;" alt="image">
                                    </div>
                                </div>
                                <input type="file" class="form-control" name="uploaded_ImageTH" accept="image/*" />
                            </div>

                            <div class="col-2">
                                <span>
                                    รูป EN
                                </span>
                                <br />
                                <span style="color:red;">
                                    ขนาดรูปภาพ : 1300 * 650 px
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <div class="mb-10" style="text-align:center;">
                                        <img src="~/upload_image/Resource_Facility/@Model.HistoryDetail.ImageEN" style="height: 250px;width: 250px;" alt="image">
                                    </div>
                                </div>
                                <input type="file" class="form-control" name="uploaded_ImageEN" accept="image/*" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <span>
                                    รายละเอียด TH
                                </span>
                            </div>
                            <div class="col-12"> 
                                <textarea id="Detail_TH">@Model.HistoryDetail.Detail_TH</textarea>
                            </div>
                            <div class="col-12">
                                <span>
                                    รายละเอียด EN
                                </span>
                            </div>
                            <div class="col-12">
                                <textarea id="Detail_EN">@Model.HistoryDetail.Detail_EN</textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_fileTH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_fileEN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    @if (Model.HistoryDetail.Status == 1)
                                    {
                                        <input class="form-check-input" checked type="checkbox" name="Status" value="1" id="Status">
                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" name="Status" value="1" id="Status">
                                    }
                                    <label class="form-check-label" for="Status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="Id" id="Id" value="@Model.HistoryDetail.Title_EN" />
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
        var getUrlParameter = function getUrlParameter(sParam) {
            var sPageURL = window.location.search.substring(1),
                sURLVariables = sPageURL.split('&'),
                sParameterName,
                i;

            for (i = 0; i < sURLVariables.length; i++) {
                sParameterName = sURLVariables[i].split('=');

                if (sParameterName[0] === sParam) {
                    return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
                }
            }
        };
        var Parmeter_id = getUrlParameter('Id');

        var check = 0;
        function checkSwitch() {
            if (document.getElementById("use_status").checked == true) {
                check = 1;
            }
            else {
                check = 0;
            }
            $("#use_status").val(check);
            console.log(check)
        }

        $(() => {
            $.ajax({
                type: 'get',
                url: '/ResourceFacility/GetHistoryDetail_Edit',
                data: { Id: Parmeter_id },
                success: function (data) {
                    $("#Id").val(data.id);
                    $("#Title_TH").val(data.title_TH);
                    $("#Title_EN").val(data.title_EN);
                    $("#Detail_TH").val(data.detail_TH);
                    $("#Detail_EN").val(data.detail_EN);

                    $("#edit_image").attr("src", "/upload_image/Resource_Facility/" + data.data.ImageTH);
                    $("#edit_imageEN").attr("src", "/upload_image/Resource_Facility/" + data.data.ImageEN);

                    var status = '';
                    if (data.status == 1) {
                        status += '<div class="form-check form-switch">';
                        status += '<input class="form-check-input" type="checkbox" name="Status" value="1" checked id="use_status" checked onclick="checkSwitch()">';
                        status += '<label class="form-check-label" for="use_status"> ใช้งาน </label>';
                        status += '</div>';
                    }
                    else {
                        status += '<div class="form-check form-switch">';
                        status += '<input class="form-check-input" type="checkbox" name="Status" value="0" id="use_status" onclick="checkSwitch()">';
                        status += '<label class="form-check-label" for="use_status"> ใช้งาน </label>';
                        status += '</div>';
                    }
                    $("#CheckStatus").html(status);
                },
                error: (e) => {
                    displayError(e);
                }
            });
        })

        var editorTH;
        var editorEN;
        ClassicEditor
            .create(document.querySelector('#Detail_TH'))
            .then(editor => {
                editorTH = editor;
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Detail_EN'))
            .then(editor => {
                editorEN = editor;
            })
            .catch(error => {
                console.error(error);
            });

        function submit_form() {
            var forms = $('#form_create')[0];
            var data = new FormData(forms);
            var get_th = editorTH.getData();
            var get_en = editorEN.getData();
            data.append("Detail_TH", get_th);
            data.append("Detail_EN", get_en);
            $.ajax({
                type: 'put',
                url: '/ResourceFacility/HistoryDetail_Edit_Submit',
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = "/ResourceFacility/History";
                },
                error: (e) => {
                    displayError(e);
                }
            });
        }
    </script>
}