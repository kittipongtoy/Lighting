@{
    ViewData["Title"] = "Button_Below_Banner";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

@model Lighting.Areas.Identity.Data.IR_Button_Below_Banner

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">ปุ่มด้านล่างแบนเนอร์</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("InvestorRelations_index","Corporate_Governance")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">หน้าแรก</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">ปุ่มด้านล่างแบนเนอร์</li>
                </ul>
            </div>
        </div>
    </div>

</div>
<form class="container mb-5" enctype="multipart/form-data" id="form">
    <div class="row">
        <div class="col-12">
            <img style="width:100%;height:60vh;" id="preview_img" src="@Model.Icon"/>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="mb-3">
                <label for="formFile" class="form-label">รูป</label>
                <input class="form-control" type="file" id="file_img" name="Icon" accept="image/*" >
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label  class="form-label">Email address</label>
                <input type="email" class="form-control" name="Title_TH" placeholder="ข้อความ (ภาษาไทย)" value="@Model.Title_TH.">
            </div>
        </div>
        <div class="col-6">
            <div class="mb-3">
                <label  class="form-label">Email address</label>
                <input type="email" class="form-control" name="Title_EN" placeholder="string (English)" value="@Model.Title_EN">
            </div>
        </div>
        <div class="col-12">
            <div class="mb-3">
                <label class="form-label">Email address</label>
                <input type="email" class="form-control" name="Link" placeholder="ลิ้ง/link http://example.com" value="@Model.Link">
            </div>
        </div>
    </div>

    <div style="display:flex;justify-content:space-between;">
        <button class="btn btn-success" onclick="edit(@Model.Id)">บันทึก/save</button>
        <a href="@Url.Action("Button_Below_Banner","IR_Index")" class="btn btn-primary">กลับ/back</a>
        </div>
</form>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('#file_img').change(async function (e) {
                if (e.target.files.length === 1) {
                    preview_img = e.target.files[0];
                    $('#preview_img').attr('src', await blobToBase64DataURL(preview_img)).css("display", "block");
                }
            });
        });

        function edit(id) {

            let formData = $("#form")[0];
            let form = new FormData(formData);


            $.ajax({
                type: 'POST',
                url: '/IR_Index/Button_Below_Banner_Edit_Submit?id='+id,
                data: form,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "/IR_Index/Button_Below_Banner";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });

                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        const blobToBase64DataURL = blob => new Promise(
            resolvePromise => {
                const reader = new FileReader();
                reader.onload = () => resolvePromise(reader.result);
                reader.readAsDataURL(blob);
            }
        );
    </script>
}