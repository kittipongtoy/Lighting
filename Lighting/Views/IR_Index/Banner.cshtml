@section Scripts{
    <script>
        var preview_img;
        $(document).ready(function () {
            $('#img_file').change(async function (e) {
                if (e.target.files.length === 1) {
                    preview_img = e.target.files[0];
                    $('#preview_img').attr('src', await blobToBase64DataURL(preview_img));
                }
            });
        });

        const blobToBase64DataURL = blob => new Promise(
            resolvePromise => {
                const reader = new FileReader();
                reader.onload = () => resolvePromise(reader.result);
                reader.readAsDataURL(blob);
            }
        );

        function save() {

            let form = $('#form')[0]
            console.log(form);
            let formData = new FormData(form);


            $.ajax({
                type: 'POST',
                url: '/IR_index/Banner_Add_Submit',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "/IR_index/Banner";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });

                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                    console.log(e.message);
                    console.log(e.inner);
                }
            });
        }

        function edit() {

            let form = $('#form')[0]
            console.log(form);
            let formData = new FormData(form);


            $.ajax({
                type: 'POST',
                url: '/IR_index/Banner_Edit_Submit',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
