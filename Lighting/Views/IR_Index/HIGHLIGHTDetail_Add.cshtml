@{
    ViewData["Title"] = "HIGHLIGHTDetail_Add";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">HIGHLIGHT</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Banner","IR_Index")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">หน้าแรก</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark"> HIGHLIGHT</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                เพิ่มรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Report","IR_Index")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ประเภทรายงาน
                                </span>
                            </div>
                            <div class="col-4">
                                <select class="form-control" name="SetType">
                                    <option value="-1">กรุณาเลือกรายการ</option>
                                    <option value="1">SHAREHOLDER INFORMATION</option>
                                    <option value="2">CORPORATE GOVERNANCE</option>
                                    <option value="3">CORPORATE SOCIAL RESPONSIBILITY</option>
                                </select>
                            </div>
                            <div class="col-2">
                                <span>
                                    รูป พื้นหลัง
                                </span><br />
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_Image" accept="image/*" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    รายละเอียด TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="SubTitle_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    รายละเอียด EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="SubTitle_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="Status" value="1" checked id="use_status" onclick="checkSwitch()">
                                    <label class="form-check-label" for="use_status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var check = 0;
        function checkSwitch() {
            if (document.getElementById("use_status").checked == true) {
                check = 1;
            }
            else {
                check = 0;
            }
            $("#use_status").val(check);
            console.log(check)
        }

        function submit_form() {
            var forms = $('#form_create')[0];
            var data = new FormData(forms);
            $.ajax({
                type: 'POST',
                url: '/IR_Index/HIGHLIGHTDetail_Add_Submit',
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = "/IR_Index/HIGHLIGHT";
                },
                error: (e) => {
                    displayError(e);
                }
            });
        }
    </script>
}