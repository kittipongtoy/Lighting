@model Lighting.Models.model_input

@{
    ViewData["Title"] = "Mass_MediaDetail_Edit";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">ข่าวแจ้งสื่อมวลชน</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Banner","IR_Index")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">ห้องข่าว</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">ข่าวแจ้งสื่อมวลชน</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                เพิ่มรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Latest_News_Index","NewRoom")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_TH" id="Title_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_EN" id="Title_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <span>
                                    รายละเอียด TH
                                </span>
                            </div>
                            <div class="col-12">
                                <textarea id="Detail_TH"></textarea>
                            </div>
                            <div class="col-12">
                                <span>
                                    รายละเอียด EN
                                </span>
                            </div>
                            <div class="col-12">
                                <textarea id="Detail_EN"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    วันที่
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="date" class="form-control" name="NewDate" />
                            </div>
                            <div class="col-2">
                                <span>
                                    รูป
                                </span>
                                <br />
                                <span style="color:red;">
                                    ขนาดรูปภาพ : 1280 * 850 px
                                </span>
                            </div>
                            <div class="col-4">
                                @if (Model.IR_MassMediaDetail.Image != null)
                                {
                                    <div class="mb-10" style="text-align:center;">
                                        <img src="~/upload_image/IR_NewRoom/@Model.IR_MassMediaDetail.Image" style="height: 250px;width: 250px;" alt="image">
                                    </div>
                                }
                                <input type="file" class="form-control" name="uploaded_Image" accept="image/*" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ข้อมูลสอบถาม TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="Question_TH" id="Question_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ข้อมูลสอบถาม EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="Question_EN" id="Question_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 1 TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name1_TH" id="ContactUs_Name1_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 2 TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name2_TH" id="ContactUs_Name2_TH" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 1 EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name1_EN" id="ContactUs_Name1_EN" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 2 EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name2_EN" id="ContactUs_Name2_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    เบอร์โทร คนที่ 1
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Tel" id="ContactUs_Tel" />
                            </div>
                            <div class="col-2">
                                <span>
                                    เบอร์โทร คนที่ 2
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Tel2" id="ContactUs_Tel2" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    อีเมล คนที่ 1
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Mail1" id="ContactUs_Mail1" />
                            </div>
                            <div class="col-2">
                                <span>
                                    อีเมล คนที่ 2
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Mail2" id="ContactUs_Mail2" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="Status" value="1" checked id="use_status" onclick="checkSwitch()">
                                    <label class="form-check-label" for="use_status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" name="Id" id="Id" />
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var getUrlParameter = function getUrlParameter(sParam) {
            var sPageURL = window.location.search.substring(1),
                sURLVariables = sPageURL.split('&'),
                sParameterName,
                i;

            for (i = 0; i < sURLVariables.length; i++) {
                sParameterName = sURLVariables[i].split('=');

                if (sParameterName[0] === sParam) {
                    return sParameterName[1] === undefined ? true : decodeURIComponent(sParameterName[1]);
                }
            }
        };
        var Parmeter_id = getUrlParameter('Id');

        var check = 0;
        function checkSwitch() {
            if (document.getElementById("use_status").checked == true) {
                check = 1;
            }
            else {
                check = 0;
            }
            $("#use_status").val(check);
        }

        var editorTH;
        var editorEN;
        ClassicEditor
            .create(document.querySelector('#Detail_TH'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorTH = editor;
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Detail_EN'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorEN = editor;
            })
            .catch(error => {
                console.error(error);
            });

        $(() => {
            $.ajax({
                type: 'get',
                url: '/NewRoom/GetMass_MediaDetail',
                data: { Id: Parmeter_id },
                success: function (data) {
                    console.log(data)
                    $("#Id").val(data.id);
                    $("#Title_TH").val(data.title_TH);
                    $("#Title_EN").val(data.title_EN);
                    $("#SubTitle_TH").val(data.subTitle_TH);
                    $("#SubTitle_EN").val(data.subTitle_EN);

                    $("#Question_TH").val(data.question_TH);
                    $("#Question_EN").val(data.question_EN);
                    $("#ContactUs_Name1_TH").val(data.contactUs_Name1_TH);
                    $("#ContactUs_Name2_TH").val(data.contactUs_Name2_TH);
                    $("#ContactUs_Name1_EN").val(data.contactUs_Name1_EN);
                    $("#ContactUs_Name2_EN").val(data.contactUs_Name2_EN);
                    $("#ContactUs_Tel").val(data.contactUs_Tel);
                    $("#ContactUs_Tel2").val(data.contactUs_Tel2);
                    $("#ContactUs_Mail1").val(data.contactUs_Mail1);
                    $("#ContactUs_Mail2").val(data.contactUs_Mail2);

                    var status = '';
                    if (data.status == 1) {
                        console.log(1)
                        status += '<div class="form-check form-switch">';
                        status += '<input class="form-check-input" type="checkbox" name="Status" value="1" checked id="use_status" checked onclick="checkSwitch()">';
                        status += '<label class="form-check-label" for="use_status"> ใช้งาน </label>';
                        status += '</div>';
                    }
                    else {
                        console.log(2)
                        status += '<div class="form-check form-switch">';
                        status += '<input class="form-check-input" type="checkbox" name="Status" value="0" id="use_status" onclick="checkSwitch()">';
                        status += '<label class="form-check-label" for="use_status"> ใช้งาน </label>';
                        status += '</div>';
                    }
                    $("#CheckStatus").html(status);
                },
                error: (e) => {
                    displayError(e);
                }
            });
        })

        function submit_form() {
            var forms = $('#form_create')[0];
            var data = new FormData(forms);
            var get_th = editorTH.getData();
            var get_en = editorEN.getData();
            data.append("Detail_TH", get_th);
            data.append("Detail_EN", get_en);
            $.ajax({
                type: 'put',
                url: '/NewRoom/Mass_MediaDetail_EditSubmit',
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = "/NewRoom/Mass_Media_Index";
                },
                error: (e) => {
                    displayError(e);
                }
            });
        }
    </script>
}