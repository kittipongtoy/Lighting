@{
    ViewData["Title"] = "Mass_MediaDetail_Add";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">ข่าวแจ้งสื่อมวลชน</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Banner","IR_Index")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">ห้องข่าว</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">ข่าวแจ้งสื่อมวลชน</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                เพิ่มรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Latest_News_Index","NewRoom")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Title_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12">
                                <span>
                                    รายละเอียด TH
                                </span>
                            </div>
                            <div class="col-12">
                                <textarea id="Detail_TH"></textarea>
                            </div>
                            <div class="col-12">
                                <span>
                                    รายละเอียด EN
                                </span>
                            </div>
                            <div class="col-12">
                                <textarea id="Detail_EN"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    วันที่
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="date" class="form-control" name="NewDate" />
                            </div>
                            <div class="col-2">
                                <span>
                                    รูป
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_Image" accept="image/*" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ข้อมูลสอบถาม TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="Question_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ข้อมูลสอบถาม EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="Question_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 1 TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name1_TH" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 2 TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name2_TH" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 1 EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name1_EN" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ชื่อผู้ติดต่อ คนที่ 2 EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Name2_EN" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    เบอร์โทร คนที่ 1
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Tel" />
                            </div>
                            <div class="col-2">
                                <span>
                                    เบอร์โทร คนที่ 2
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Tel2" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    อีเมล คนที่ 1 
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Mail1" />
                            </div>
                            <div class="col-2">
                                <span>
                                    อีเมล คนที่ 2
                                </span>
                            </div>
                            <div class="col-4">
                                <input class="form-control" name="ContactUs_Mail2" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="Status" value="1" checked id="use_status" onclick="checkSwitch()">
                                    <label class="form-check-label" for="use_status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var check = 0;
        function checkSwitch() {
            if (document.getElementById("use_status").checked == true) {
                check = 1;
            }
            else {
                check = 0;
            }
            $("#use_status").val(check);
        }

        var editorTH;
        var editorEN;
        ClassicEditor
            .create(document.querySelector('#Detail_TH'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorTH = editor;
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#Detail_EN'))
            .then(editor => {
                console.log('Editor was initialized', editor);
                editorEN = editor;
            })
            .catch(error => {
                console.error(error);
            });

        function submit_form() {
            var forms = $('#form_create')[0];
            var data = new FormData(forms);
            var get_th = editorTH.getData();
            var get_en = editorEN.getData();
            data.append("Detail_TH", get_th);
            data.append("Detail_EN", get_en);
            $.ajax({
                type: 'POST',
                url: '/NewRoom/Mass_MediaDetail_Add_Submit',
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = "/NewRoom/Mass_Media_Index";
                },
                error: (e) => {
                    displayError(e);
                }
            });
        }
    </script>
}