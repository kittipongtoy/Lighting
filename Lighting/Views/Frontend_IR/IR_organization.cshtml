@model Lighting.Models.model_input

@{
    ViewData["Title"] = "IR_organization";
    Layout = "~/Views/Shared/Layout/Frontend_Layout.cshtml";
    ViewData["IR_Stock_LinkDetail"] = (List<Lighting.Areas.Identity.Data.IR_Stock_LinkDetail>)ViewBag.IR_Stock_LinkDetail;
}

@Html.Partial("~/Views/Shared/Inc/IR_inc_topmenu.cshtml")
<input id="page_name" value="ir" hidden />
<!---------- IR 01 CORPORATE INFO :: ORGANIZATION ---------->
<div class="content-padding foot-pad">
    <div class="container-fluid">
        <div class="wrap-pad">
            <div class="row">
                <div class="col">
                    <div class="header-twoline">
                        <h5>ข้อมูลบริษัท</h5>
                        <h1>โครงสร้างองค์กร</h1>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                @{
                    if (Model.count_list_OrganizationalStructure > 0)
                    {
                        foreach (var items in Model.list_OrganizationalStructure)
                        {
                            @if (Context.Request.Cookies["lang"] == "EN")
                            {
                                <div class="col-lg-10 col-md-11 col-12 mb-3">
                                    <a class="img-width hover-img" data-fancybox data-caption="โครงสร้างองค์กร" href="~/upload_image/OrganizationalStructure/@items.image_nameEN">
                                        <img src="~/upload_image/OrganizationalStructure/@items.image_nameTH">
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-10 col-md-11 col-12 mb-3">
                                    <a class="img-width hover-img" data-fancybox data-caption="โครงสร้างองค์กร" href="~/upload_image/OrganizationalStructure/@items.image_nameTH">
                                        <img src="~/upload_image/OrganizationalStructure/@items.image_nameTH">
                                    </a>
                                </div>                          
                            }
                        }
                    }
                }
            </div>
        </div>
    </div>
</div>
