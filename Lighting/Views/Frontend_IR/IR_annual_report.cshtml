@section Scripts{

    <script>

        var getPagination;

        $(function () {

            let container = $('#pagination');
            var dto = [];
            getPagination = function (dto) {

                var local = "@language";

                var date = function ({ year }, lag) {
                    if (lag === "TH") {
                        return getDateString(year);
                    } else if (lag === "EN") {
                        return getDateString(year);
                    }
                }

                var image = function ({ upload_image, upload_image_ENG }, lag) {
                    if (lag === "TH") {
                        if (upload_image.toLowerCase() == "null") {
                            return upload_image;
                        } else {
                            return upload_image;
                        }
                        //return FileDownload_TH;
                    } else if (lag === "EN") {
                        if (upload_image_ENG.toLowerCase() == "null") {
                            return upload_image_ENG;
                        } else {
                            return upload_image_ENG;
                        }
                        //return FileDownload_ENG;
                    }
                }

                var file = function ({ file_name, file_name_ENG }, lag) {
                    if (lag === "TH") {
                        if (file_name.toLowerCase() == "null") {
                            return file_name;
                        } else {
                            return file_name;
                        }
                        //return FileDownload_TH;
                    } else if (lag === "EN") {
                        if (file_name_ENG.toLowerCase() == "null") {
                            return file_name_ENG;
                        } else {
                            return file_name_ENG;
                        }
                        //return FileDownload_ENG;
                    }
                }

                var title = function ({ titleTH, titleENG }, lag) {
                    if (lag === "TH") {
                        if (titleTH.toLowerCase() == "null") {
                            return titleTH;
                        } else {
                            return titleTH;
                        }
                        //return titleENG;
                    } else if (lag === "EN") {
                        if (titleENG.toLowerCase() == "null") {
                            return titleENG;
                        } else {
                            return titleENG;
                        }
                        //return titleENG;
                    }
                }

                var GetId = function ({ id }, lag) {
                    if (lag === "TH") {
                        return id;
                    } else if (lag === "EN") {
                        return id;
                    }
                }

                container.pagination({
                    dataSource: dto,
                    pageSize: 12,
                    position: 'center',
                    callback: function (data, pagination) {
                        var dataHtml = `<div class="three-colPad">
                                                                        <div class="row justify-content-center">`;
                        $.each(data, function (index, item) {

                            var date = new Date(item.year);
                            var optionsTH = { year: 'numeric' };
                            var formattedDateTH = date.toLocaleDateString('th-TH', optionsTH);

                            var optionsEN = { year: 'numeric' };
                            var formattedDateEN = date.toLocaleDateString('en-US', optionsEN);

                            //let { date } = convertDate(item.year, local);

                            dataHtml += `<div class="col-lg-4 col-md-4 col-6" >
                                                    <a class="coverBox" href="../upload_file/SH_annualReport/`+ file(item, local) + `" target="_blank">
                                                        <div class="row">
                                                            <div class="col">
                                                                <div class="book-cover">
                                                                        <img src="../upload_image/SH_annualReport/`+ image(item, local) + `" >
                                                                </div>
                                                            </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col">
                                                                    <div class="cover-topic">
                                                                            <p>`+ title(item, local) + `&nbsp;`;
                            if (local == "TH") {
                                dataHtml += formattedDateTH
                            } else {
                                dataHtml += formattedDateEN
                            }
                            dataHtml += `</p>
                                                        </div>
                                                </div>
                                        </div>
                                    </a>
                                </div>`;
                        });

                        dataHtml += ` </div>
                                                                     </div>`;

                        $("#data-container").html(dataHtml);
                    }
                });

            }

            getPagination(function (done) {
                //debugger;
                $.ajax({
                    url: '/Frontend_IR/Get_IR_annual_report',
                    type: 'GET',
                    processData: false,
                    contentType: false,
                    success: function (response) {

                        let pp = [];

                        if (response && response.obj && Array.isArray(response.obj)) {
                            response.obj.forEach(data => pp.push(data));
                        } else {
                            console.log('Invalid response or missing "obj" property');
                        }
                        done(pp);
                    },
                    error: function (error) {
                        console.log('AJAX request failed:', error);
                    }
                });
            });
        });

        function getDateString(date) {

            var dtStart = new Date(parseInt(date.substr(6)));

            return moment(dtStart).format("YYYY");
        }

        $(document).on('click', '.SW_TH, .SW_EN', function (e) {
            location.reload();
        });


    </script>
