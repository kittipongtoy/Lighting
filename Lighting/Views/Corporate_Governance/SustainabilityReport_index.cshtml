@model Lighting.Models.model_input

@{
    ViewData["Title"] = "SustainabilityReport_index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">รายงานความยั่งยืน</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Banner","IR_Index")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">นโยบายการกำกับดูแลกิจการ</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">รายงานความยั่งยืน</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    @{
                        if (Model.count_row_Sustainability_Report > 0)
                        {
                            <div>
                                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                                    <a type="button" class="btn btn-primary" target="_blank" href="~/upload_file/SustainabilityReport/@Model.fod_Sustainability_Report.file_name">ดาวน์โหลดไฟล์ปัจจุบัน TH</a>
                                </div>
                                <br />
                                <div class="d-flex justify-content-end" data-kt-customer-table-toolbar="base">
                                    <a type="button" class="btn btn-primary" target="_blank" href="~/upload_file/SustainabilityReport/@Model.fod_Sustainability_Report.file_name_ENG">ดาวน์โหลดไฟล์ปัจจุบัน ENG</a>
                                </div>
                            </div>
                        }
                    }
                </div>
                <br />
                <div class="card-body pt-0">
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_file" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร ENG
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_file_ENG" />
                            </div>
                        </div>
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/Corporate_Governance/SustainabilityReport_index_update',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait!')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.reload();
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                }
            });
        }
    </script>
}