@model Lighting.Models.model_input

@{
    ViewData["Title"] = "Author_secretary_edit";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">ขอบเขตอำนาจหน้าที่เลขานุการบริษัท</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Banner","IR_Index")" class="text-muted text-hover-primary">นักลงทุนสัมพันธ์</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">นโยบายการกำกับดูแลกิจการ</li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">ขอบเขตอำนาจหน้าที่เลขานุการบริษัท</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                แก้ไขรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Author_secretary_index","Corporate_Governance")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <input class="form-control" name="id" hidden value="@Model.fod_O_Author_secretary_File.id" />
                       @* <div class="mb-10" style="text-align:center;">
                            <img src="~/upload_image/BusinessEthics/@Model.fod_O_Author_secretary_File.image_name" onclick="window.location.href='/upload_file/BusinessEthics/@Model.fod_O_Author_secretary_File.file_name'" style="height: 250px;width: 250px; cursor:pointer;" alt="image">
                        </div>*@
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    หัวข้อ TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="title_file_th" value="@Model.fod_O_Author_secretary_File.title_file_th" />
                            </div>
                            <div class="col-2">
                                <span>
                                    หัวข้อ EN
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="title_file_en" value="@Model.fod_O_Author_secretary_File.title_file_en" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    รูปหน้าปก TH
                                </span>
                                <br />
                                <span style="color:red;">
                                    ขนาดรูปภาพ : 600 * 840 px
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <img src="~/upload_image/Author_secretary/@Model.fod_O_Author_secretary_File.image_name" onclick="window.location.href='/upload_file/Author_secretary/@Model.fod_O_Author_secretary_File.file_name'" style="height: 250px;width: 250px; cursor:pointer;" alt="image">
                                </div>
                                <input type="file" class="form-control" name="uploaded_image" accept="image/*" />
                            </div>
                            <div class="col-2">
                                <span>
                                    รูปหน้าปก ENG
                                </span>
                                <br />
                                <span style="color:red;">
                                    ขนาดรูปภาพ : 600 * 840 px
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="mb-10" style="text-align:center;">
                                    <img src="~/upload_image/Author_secretary/@Model.fod_O_Author_secretary_File.image_name_ENG" onclick="window.location.href='/upload_file/Author_secretary/@Model.fod_O_Author_secretary_File.file_name_ENG'" style="height: 250px;width: 250px; cursor:pointer;" alt="image">
                                </div>
                                <input type="file" class="form-control" name="uploaded_image_ENG" accept="image/*" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร TH
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_file" />
                            </div>
                            <div class="col-2">
                                <span>
                                    ไฟล์เอกสาร ENG
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="file" class="form-control" name="uploaded_file_ENG" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    สถานะการใช้งาน
                                </span>
                            </div>
                            <div class="col-4">
                                <div class="form-check form-switch">
                                    @if (Model.fod_O_Author_secretary_File.use_status == 1)
                                    {
                                        <input class="form-check-input" checked type="checkbox" name="use_status" value="1" id="use_status">
                                    }
                                    else
                                    {
                                        <input class="form-check-input" type="checkbox" name="use_status" value="1" id="use_status">
                                    }
                                    <label class="form-check-label" for="use_status">ใช้งาน</label>
                                </div>
                            </div>
                        </div>
                    </form>

                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            $.ajax({
                type: 'POST',
                url: '/Corporate_Governance/Author_secretary_edit_update',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait!')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        }).then(() => {
                            window.location.href = "@Url.Action("Author_secretary_index","Corporate_Governance")";
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                }
            });
        }
    </script>
}