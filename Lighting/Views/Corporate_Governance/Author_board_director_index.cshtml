</div>
@section Scripts{
    <script>
        var editorTH;
        var editorEN;
        ClassicEditor
            .create(document.querySelector('#kt_docs_ckeditor_document_TH'))
            .then(editor => {
                editorTH = editor;
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#kt_docs_ckeditor_document_EN'))
            .then(editor => {
                editorEN = editor;
            })
            .catch(error => {
                console.error(error);
            });

        function submit_form() {
            var raw_form = document.getElementById('form_create');
            var formData = new FormData(raw_form);

            var get_th = editorTH.getData();
            var get_en = editorEN.getData();
            formData.append("detail_th", get_th);
            formData.append("detail_en", get_en);
            $.ajax({
                type: 'POST',
                url: '/Corporate_Governance/Author_board_director_index_update',
                data: formData,
                processData: false,
                contentType: false,
                cache: false,
                beforeSend: function () {
                    Swal.fire('Please wait!')
                    Swal.showLoading()
                },
                success: function (data) {
                    if (data.status == "success") {
                        Swal.fire({
                            icon: 'success',
                            title: data.message,
                            showConfirmButton: false,
                            timer: 2000
                        })
                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                }
            });
        }

        function changeStatus(id, checked_obj) {
            $.ajax({
                type: "POST",
                cache: false,
                url: "/Corporate_Governance/Author_board_director_changeStatus",
                data: {
                    id: id,
                    status: checked_obj.checked
                },    // multiple data sent using ajax
                success: function (data) {
                    if (data.status == "success") {

                    }
                    else {
                        Swal.fire({
                            icon: 'warning',
                            text: data.message,
                        });
                    }
                }, error: function (e) {
                    Swal.fire({
                        icon: 'error',
                        text: e.message,
                    });
                }
            });
        }

        function edit_item(id) {
            location.href = '/Corporate_Governance/Author_board_director_edit/?Id=' + id;
            //window.location.href = "Url.Action("Author_board_director_edit","Corporate_Governance")/" + id;
        }

        function delete_item(id) {
            Swal.fire({
                title: 'คุณต้องการจะลบหรือไม่?',
                showDenyButton: true,
                showCancelButton: false,
                confirmButtonText: 'ใช่',
                denyButtonText: `ไม่ใช่`,
            }).then((result) => {
                /* Read more about isConfirmed, isDenied below */
                if (result.isConfirmed) {
                    $.ajax({
                        type: "POST",
                        cache: false,
                        url: "/Corporate_Governance/Author_board_director_delete",
                        data: {
                            id: id
                        },    // multiple data sent using ajax
                        success: function (data) {
                            if (data.status == "success") {
                                Swal.fire({
                                    icon: 'success',
                                    title: data.message,
                                    showConfirmButton: false,
                                    timer: 2000
                                }).then((result) => {
                                    var oTable = $('#kt_customers_table').DataTable();
                                    oTable.ajax.reload(null, false);
                                });
                            }
                            else {
                                Swal.fire({
                                    icon: 'warning',
                                    text: data.message,
                                });
                            }
                        }, error: function (e) {
                            Swal.fire({
                                icon: 'error',
                                text: e.message,
                            });
                        }
                    });
                } else if (result.isDenied) {

                }
            })
        }

        $(document).ready(function () {
            var table_1 = $("#kt_customers_table").DataTable({
                responsive: true,
                order: [[0, "asc"]],
                "ajax": {
                    "url": "/Corporate_Governance/Author_board_director_index_getTable",
                    "type": "POST",
                    "datatype": "json",

                },
                "columns": [
                    {
                        "name": "count_row", "data": "count_row"
                    },
                    {
                        "name": "title_file_th", "data": "title_file_th"
                    },
                    {
                        "name": "title_file_en", "data": "title_file_en"
                    },
                    //{
                    //	"name": "image_name", "data": "image_name", "class": "text-center", "render": function (data, type, row) {
                    //		var text = '<div class="mb-10" style="text-align:center;">' +
                    //			'<img src="/upload_image/AntiFraud/' + row.image_name + '" style="height: 250px;width: 250px;" alt="image">' +
                    //			'</div>';
                    //		return text;

                    //	}
                    //},
                    {
                        "name": "use_status", "data": "use_status", "render": function (data, type, row) {
                            if (row.use_status == 1) {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" checked type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            } else {
                                var text = '<div class="form-check form-switch">' +
                                    '<input class="form-check-input" type="checkbox" name="use_status" value="1" id="use_status" onchange="changeStatus(' + row.id + ',this)"> ' +
                                    '<label class="form-check-label" for="use_status">ใช้งาน</label>' +
                                    '</div>';
                                return text;
                            }


                        }
                    },
                    {
                        "name": "id", "data": "id", "class": "text-center", "render": function (data, type, row) {
                            var text = '<button type="button" class="btn btn-warning" onclick="edit_item(' + row.id + ')"><i class="bi bi-pencil-square"></i>แก้ไข</button>';
                            text += '<button type="button" class="btn btn-danger"style="margin-left: 15px;" onclick="delete_item(' + row.id + ')"><i class="bi bi-trash-fill"></i>ลบ</button>';
                            return text;

                        }
                    }
                ],
            });


            $('#search_table_1').keyup(function () {
                table_1.search($(this).val()).draw();
            })

        });

    </script>
}